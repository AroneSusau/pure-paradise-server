  "compilerOptions": {
      "target": "es6",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "build/",
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "build",
      "docs",
      ".*",
      "**/*.json",
      "**/*.spec.ts",
  ]
}